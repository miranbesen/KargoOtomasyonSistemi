                <label>Çanakkale Onsekiz Mart Üniversitesi</label>
                <br />
                <br />
                <label style="font-size: 15px;color: darkred;">Sınıf:</label>
                <label>3</label>
                <br />
                <br />
                <label style="font-size: 15px;color: darkred;">Yaşadığım Şehir:</label>
                <label>Mersin</label>
                <br />
                <br />
                <label style="font-size: 15px;color: darkred;">Genel Not Ortalamam:</label>
                <label>3,09</label>

                <div class="modal-footer">
                    <br />
                    <br />
                   
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>


